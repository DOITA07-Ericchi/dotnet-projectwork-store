@model Car

<div class="row g-3 mt-1 align-items-center text-light darkmask border border-2 border-red">
    <div class="text-center">
        <h1 class="mt-3 mb-3">Id: @Model.Id</h1>
        <img class="w-100" src="@Model.Url_image" alt="@Model.Name" />
    </div>
    <hr />
    <p>
        <strong>Nome:</strong>
        @Model.Name
    </p>
    <p>
        <strong>Descrizione: </strong>
        @Model.Description
    </p>
    <p>
        <strong>Prezzo:</strong>
        @Model.Price <span>€</span>
    </p>
    <p>
        <strong>Categoria:</strong>
        @if (Model.Category != null)
        {
            @Model.Category.Name
        }
    </p>
    <p>
        <strong>Colore:</strong>
        @Model.Color
    </p>
    <p>
        <strong>Sticker:</strong>
        @if (Model.Category != null)
        {
            @Model.Sticker.Name
        }
    </p>
    <form asp-controller="Admin" asp-action="AdminPurchase" asp-route-id="@Model.Id" method="get"
        class="text-light p-3">
        @Html.AntiForgeryToken()
        <button type="submit" class="mt-4 btn btn-primary">Rifornisci</button>
    </form>
</div>
<div class="row mt-5">
    <div class="col-12 col-md-10 col-lg-8">
        <div class="row g-3 gy-5 justify-content-evenly">
            <div class="col-12 col-md-10 col-lg-12 me">
                <a class="btn" href="@Url.Action("Index", "Admin")">Torna alle auto</a>
            </div>
        </div>
    </div>
</div>
