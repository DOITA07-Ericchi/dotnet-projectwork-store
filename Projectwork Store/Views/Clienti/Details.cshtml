
<div id="auto_container" class="row g-3 mt-1 align-items-center text-light darkmask mt-5 mb-5 p-5 border border-2 border-red">
    
</div>
<div class="row">
    <div class="col-12 col-md-10 col-lg-8">
        <div class="row g-3 gy-5 justify-content-evenly">
            <div class="col-12 col-md-10 col-lg-12 me">
                <a class="btn" href="@Url.Action("Index", "Admin")">Torna alle auto</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script type="text/javascript">

        const id = window.location.href.substring(window.location.href.lastIndexOf('/') + 1);

        axios.get(`/api/cars/${id}`).then((res) => {

            let car = res.data;
            console.log('car ricevuta', car);
            

            document.getElementById('auto_container').innerHTML +=
                `
                               <div class="text-center">
                                    <h1 class="mt-3 mb-3">i${car.name}</h1>
                                    <img class="w-75" src="${car.url_image}" alt="${car.name}" />
                                </div>
                                <hr />
                                <p>
                                    <strong>Descrezione: </strong>
                                    ${car.description}
                                </p>
                                <p>
                                    <strong>Categoria:</strong>
                                    ${car.category.name}
                                </p>
                                <p>
                                    <strong>Colore:</strong>
                                    ${car.color}
                                </p>
                                <p>
                                    <strong>Sticker:</strong>
                                    ${car.sticker.name}
                                </p>
                                <p>
                                    <strong>Prezzo:</strong>
                                    ${car.price}<span>€</span>
                                </p>
                                `;

        });

    </script>
}
