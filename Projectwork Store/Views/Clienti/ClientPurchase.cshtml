
@model UserPurchase

<div class="container darkmask border border-2 border-red">
    <form asp-controller="Clienti" asp-action="ClientPurchase" class="text-light p-3">
        @Html.AntiForgeryToken()
        <div class="row g-3 mt-1 align-items-center">
            <div class="col">
                <label>Nome:</label>
                <input type="text" class="form-control bg-black text-light border border-2 border-red" asp-for="Name" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col">
                <label>Cognome:</label>
                <input type="text" class="form-control bg-black text-light border border-2 border-red" asp-for="Surname" required />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="col">
                <label>Email:</label>
                <input type="text" class="form-control bg-black text-light border border-2 border-red" asp-for="Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col">
                <label>Quantità:</label>
                <input type="number" min="1" class="form-control bg-black text-light border border-2 border-red" asp-for="Quantity" required />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>
        
        <button type="submit" class="mt-4 btn btn-primary">Salva</button>
    </form>
</div>



            

